@import "../../static/css/common.wxss";

.home-header {
    box-sizing: border-box;
    background-color: #fff;
    position: fixed;
    width: 100vw;
    left: 0;
    top: 0;
    z-index: 8;
}

.home-header .title {
    display: inline-block;
    font-size: 38rpx;
    font-weight: bold;
    padding-left: 20rpx;
    padding-right: 20rpx;
    vertical-align: middle;
}

.home-header .search-box {
    display: inline-block;
    padding-right: 20rpx;
    vertical-align: middle;
}

.home-header .search {
    display: inline-block;
    width: 100%;
    height: 100%;
    font-size: 26rpx;
    color: #C8CDD1;
    padding-left: 24rpx;
    padding-right: 24rpx;
    background-color: #F4F4F5;
}

.home-header .search .text {
    font-size: 26rpx;
    color: #C8CDD1;
}