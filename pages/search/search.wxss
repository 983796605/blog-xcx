page {
    background-color: #f8f8f8;
}

.input-box {
    position: sticky;
    top: 0;
    left: 0;
    width: 100vw;
    padding: 20rpx 30rpx;
    background-color: #fff;
    z-index: 9;
}

.input-box .search-icon {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    left: 45rpx;
    top: 50%;
    margin-top: -24rpx;
}

.input-box .input-item {
    padding-left: 65rpx;
    padding-right: 76rpx;
    background-color: #f4f4f5;
    border-radius: 40rpx;
}

.input-box .input {
    width: 100%;
    height: 65rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.input-box .delete-icon {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 45rpx;
    top: 50%;
    margin-top: -25rpx;
}


