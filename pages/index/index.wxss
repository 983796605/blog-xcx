
.hot-box {
    padding: 0 30rpx;
    margin-top: 20rpx;
}
.swiper-box {
    width: 100%;
    border-radius: 20rpx;
    overflow: hidden;
}
.hot-box .list {
    height: 100%;
    position: relative;
}
.mask-text {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.4);
}
.mask-text .text {
    position: absolute;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    left: 0;
    bottom: 20rpx;
    color: #fff;
    font-size: 28rpx;
}
.hot-box .list .cover {
    height: 100%;
    width: 100%;
}

.article-box .list {
    padding: 30rpx;
    overflow: hidden;
    border-bottom: 1px solid #efefef;
}
.article-box .list .cover {
    width: 180rpx;
    height: 180rpx;
    float: left;
    margin-right: 20rpx;
    border-radius: 20rpx;
}
.article-box .list .info {
    overflow: hidden;
    height: 180rpx;
    position: relative;
}
.article-box .list .title {
    color: #18191C;
    font-size: 30rpx;
    line-height: 46rpx;
}
.article-box .list .intro {
    font-size: 24rpx;
    color: #7E838C;
    line-height: 32rpx;
    margin-top: 20rpx;
}
.article-box .list .time-hot {
    width: 100%;
    position: absolute;
    bottom: 0;
    padding-right: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.article-box .list .time, .article-box .list .heat {
    font-size: 24rpx;
    color: #999;
}
.section-title {
    padding: 20rpx;
    border-bottom: 1px dashed #ececec;
    margin-top: 30rpx;
    font-size: 32rpx;
    width: 100%;
    z-index: 9;
    font-weight: bold;
    position: sticky;
    left: 0;
    background-color: #fff;
}